{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017"],
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "preserveWatchOutput": true,
        "types": ["node"],
        "outDir": "dist",
        "baseUrl": "."
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "node_modules", "__tests__"]
}
