{
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [ "es2016", "es2017", "dom", "es2017.object", "esnext" ],
        // "downlevelIteration": true, // for supporting Object.entries
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,   // enable strict null checks as a best practice
        "allowJs": true,             // allow a partial TypeScript and JavaScript codebase
        "target": "es2018",
        "sourceMap": true,
        "module": "esnext",
    },
    "include": [
        "./src/**/*",
        "typings.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "__tests__"
    ]
}
